<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--Dependency Injection via constructor-->
    <bean id="postgresDriver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <!--(init-method) Configuring bean using an initialization callback that is triggered after the constructor and setters initialisation-->
    <!--(destroy-method) is launched in the process of destroying the application context-->
    <bean id="connectionPool" class="org.example.spring.database.jdbc.ConnectionPool"
          init-method="initMethod"
          destroy-method="destroyMethod">
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <!--Dependency Injection via constructor-->
        <constructor-arg name="username" type="java.lang.String" value="postgres"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <value>--arg3=value3</value>
            </list>
        </constructor-arg>
        <constructor-arg name="properties" type="java.util.Map">
            <!--            <map>-->
            <!--                <entry key="url" value-type="java.lang.String" value="postgresUrl"/>-->
            <!--                <entry key="password" value-type="java.lang.String" value="postgresUrl"/>-->
            <!--                <entry key="driver" value-ref="postgresDriver"/>-->
            <!--            </map>-->
            <null/>
            <!-- PS: It is a bad practice to allow null in the constructor -->
        </constructor-arg>
        <!--Dependency Injection via set method-->
        <property name="properties">
            <map>
                <entry key="url" value-type="java.lang.String" value="postgresUrl"/>
                <entry key="password" value-type="java.lang.String" value="postgresUrl"/>
                <entry key="driver" value-ref="postgresDriver"/>
            </map>
        </property>
    </bean>
    <!--Dependency Injection via static factory method-->
    <bean id="companyRepository" class="org.example.spring.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="connectionPool"/>
    </bean>


</beans>